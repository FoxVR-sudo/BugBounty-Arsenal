# BugBounty Arsenal - Environment Variables
# Copy this file to .env and fill in your values

# Application Settings
APP_URL=http://localhost:8000
DATABASE_URL=sqlite:///./bugbounty_arsenal.db
JWT_SECRET_KEY=your-secret-key-here-change-in-production

# Stripe API Keys (Get from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (Create products in Stripe Dashboard)
# BASIC: €4.99/month recurring
STRIPE_PRICE_BASIC=price_your_basic_price_id
# PRO: €9.99/month recurring
STRIPE_PRICE_PRO=price_1Pro_monthly_id_here
# ENTERPRISE: €49.99/month recurring
STRIPE_PRICE_ENT=price_1Enterprise_monthly_id_here

# Email Service Configuration (for verification emails)
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password-here
FRONTEND_URL=http://localhost:8000

# OAuth Settings (Optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
